<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical">
  
<!-- LINEARLAYOUT for last update -->        
		<LinearLayout
		  android:layout_width="fill_parent" 
		  android:layout_height="wrap_content"
		  android:layout_marginTop="10dip" 
		  android:orientation="horizontal" >
		    <TextView android:id="@+id/ppName"
		      android:layout_width="wrap_content" 
		      android:layout_height="wrap_content"
		      android:text="Name" >
		    </TextView>
    </LinearLayout>
    
<!-- VIEW for a line -->
    <View
      android:layout_width="fill_parent"
      android:layout_height="1dip"
      android:background="#ff106510"
      android:layout_marginLeft="6dip"
      android:layout_marginRight="6dip"
      android:layout_marginTop="6dip"
      android:layout_marginBottom="12dip" >
    </View>

<!-- ONOFF -->
    <LinearLayout
      android:layout_width="fill_parent" 
      android:layout_height="wrap_content" 
      android:gravity="right|center_vertical" >
        <ToggleButton android:id="@+id/onOff" 
          android:layout_width="wrap_content" 
          android:layout_height="wrap_content" 
          android:layout_margin="3dip"
          android:onClick="onOff" >
        </ToggleButton>
    </LinearLayout>

<!-- DELAY -->
    <TableLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dip" 
      android:layout_marginRight="3dip" 
      android:layout_marginLeft="3dip" >
      
	    <TableRow>
		    <Button
		      android:layout_weight="1.0"
		      android:text="+"
		      android:onClick="increase"
		      android:tag="h_i">
		    </Button>
		    <Button
  		    android:layout_weight="1.0"
		      android:text="+"
		      android:onClick="increase"
		      android:tag="m_i">
		    </Button>
		    <Button
		      android:layout_weight="1.0"
		      android:text="+"
		      android:onClick="increase"
		      android:tag="s_i">
		    </Button>
	    </TableRow>
	    
	    <TableRow>
	      <EditText android:id="@+id/hoursEt"
	        android:layout_weight="1.0"
	        android:gravity="center"
	        android:saveEnabled="true"
	        android:lines="1"
	        android:text="0">
	      </EditText>
	      <EditText android:id="@+id/minutesEt"
	        android:layout_weight="1.0"
	        android:gravity="center"
	        android:saveEnabled="true"
          android:lines="1"
	        android:text="0">
	      </EditText>
	      <EditText android:id="@+id/secondsEt"
	        android:layout_weight="1.0"
	        android:gravity="center"
	        android:saveEnabled="true"
          android:lines="1"
	        android:text="1">
	      </EditText>
      </TableRow>
	    
	    <TableRow>
	      <Button
	        android:layout_weight="1.0"
          android:text="-"
          android:onClick="decrease"
          android:tag="h_d">
        </Button>
        <Button
          android:layout_weight="1.0"
          android:text="-"
          android:onClick="decrease"
          android:tag="m_d">
        </Button>
        <Button
          android:layout_weight="1.0"
          android:text="-"
          android:onClick="decrease"
          android:tag="s_d">
        </Button>
	    </TableRow>
	    
	    <TableRow>
	      <TextView
	        android:layout_weight="1.0"
	        android:gravity="center"
	        android:text="@string/hours" >
	      </TextView>
	      <TextView
	        android:layout_weight="1.0"
	        android:gravity="center"
	        android:text="@string/minutes" >
	      </TextView>
	      <TextView
	        android:layout_weight="1.0"
	        android:gravity="center"
	        android:text="@string/seconds" >
	      </TextView>
	    </TableRow>
      
    </TableLayout>
  
<!-- TEXTVIEW for Delay in seconds -->  
    <LinearLayout
      android:layout_width="fill_parent" 
      android:layout_height="wrap_content"
      android:layout_marginTop="10dip" 
      android:orientation="horizontal"
      android:gravity="center" >  
			  <TextView android:id="@+id/DelayTime" 
			    android:layout_width="fill_parent" 
			    android:layout_height="wrap_content"
			    android:layout_weight="1.0" 
			    android:text="Delay: " >
			  </TextView>
			  <Button android:id="@+id/onOffDelay" 
			    android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
		      android:layout_weight="1.0"
		      android:text="@string/onOffDelay"
		      android:onClick="onOff"
		      android:tag="0" >
		    </Button>
	  </LinearLayout>
    
